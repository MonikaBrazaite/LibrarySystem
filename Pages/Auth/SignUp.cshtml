@page
@model LibrarySystem.Pages.Auth.SignUpModel
@{
    ViewData["Title"] = "Sign Up";
}

<h2>Sign Up</h2>

<form method="post">
    <div class="mb-3">
        <label asp-for="NewUser.FullName" class="form-label"></label>
        <input asp-for="NewUser.FullName" class="form-control" />
        <span asp-validation-for="NewUser.FullName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewUser.Email" class="form-label"></label>
        <input asp-for="NewUser.Email" class="form-control" />
        <span asp-validation-for="NewUser.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NewUser.Password" class="form-label"></label>
        <input asp-for="NewUser.Password" class="form-control" type="password" />
        <span asp-validation-for="NewUser.Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Create Account</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
